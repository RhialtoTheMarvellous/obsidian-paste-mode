{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2021",
      "ESNext.String",
      "dom.iterable"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
